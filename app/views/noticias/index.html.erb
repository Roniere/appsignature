<h1 class="titulo">Not&iacutecias Signature</h1>
<% if can? :new, @noticias%>
	<h2><%= link_to image_tag('novo.png'), new_noticia_path %></h2>
<% end %>

	<table border="0" width="100%" class="noticias">
		<% @noticias.each do |noticia| %>
			<tr>
				<td class="noticias"><h2 class="noticias"><%= link_to noticia.title, noticia %></h2></td>
			</tr>
			<tr>
				<td class="noticias"><p class="noticias"><%= noticia.descricaoevento %></p></td>
			</tr>
		
			<tr>
				<td colspan="3" class="noticias">
				<% if can? :update, @noticias%>
					<%= link_to image_tag('editar.png'), edit_noticia_path(noticia) %>
				<% end %>
				<% if can? :destroy, @noticias%>
					<%= link_to image_tag('excluir.png'), noticia, :confirm => 'Tem certeza?', :method => :delete %></td>
				<% end %>
			</tr>
		<% end %>
		<tr> 
			<td class="produtospaginate">
				<%= will_paginate @noticias %>
			</td>
		</tr>
	</table>

<br />
		



