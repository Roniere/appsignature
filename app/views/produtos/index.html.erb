<h1 class="produtos">Produtos Signature</h1>


<% if can? :new, @produtos%>
		<h2><%= link_to 'Novo Produto', new_produto_path %></h2>
<% end %>

	<table border="0" width="100%" >
    
		<% @produtos.each do |produto| %>
			<tr>
				<td colspan="2" class="produtos">
						<h2 class="produtos">
						<hr>
								<%= link_to raw(produto.nomeproduto), produto %>
						</h2>
				</td>
			
			</tr>
			<tr>
				<td rowspan="3" class="produtosfoto">
					
						<%= link_to image_tag(produto.foto1(:medium)), produto%>
						
				</td>
			
			</tr>
				<td class="produtos">
								<%= raw(produto.descricao[0,300])%>...<br /><br />
								<h3><%= link_to 'Ler mais', produto%></h3>
				</td>
			</tr>
				<td colspan="2"  class="produtos">
				<% if can? :update, @produtos%>
					<%= link_to 'Editar', edit_produto_path(produto) %>
				<% end %>
				<% if can? :destroy, @produtos%>
					<%= link_to 'Excluir', produto, :confirm => 'Tem certeza?', :method => :delete %></td>
					
				<% end %>
				
		</tr>
	
		
		<% end %>
		<tr> 
			<td class="produtospaginate">
				<%= will_paginate @produtos %>
			</td>
		</tr>
	</table>

<br />


